<UserControl x:Class="ggMapEditor.Views.Controls.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ggMapEditor.Views.Controls"
             AllowDrop="True"
             SnapsToDevicePixels="True">
    <Image Name="tileImg"
            Source="{Binding TileSource, Mode=OneWay}"
            Width="{Binding TileWidth, Mode=OneWay}"
            Height="{Binding TileHeight, Mode=OneWay}"
           Stretch="Uniform"
           ToolTip="{Binding ImgId, Mode=OneWay}"/>
</UserControl>
